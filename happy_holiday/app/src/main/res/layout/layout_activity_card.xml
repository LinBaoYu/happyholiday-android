<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/view_margin_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_small"
        android:visibility="gone"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/activity_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:id="@+id/activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_small"
                tools:text="10:00 am"
                />

            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:layout_below="@+id/activity_time"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="@dimen/font_large"
                tools:text="Breakfast"
                />

            <TextView
                android:id="@+id/up_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_title"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_small"
                android:drawablePadding="@dimen/margin_small"
                android:gravity="center"
                android:drawableStart="@drawable/ic_thumb_up_black_18dp"
                tools:text="3"
                />

            <TextView
                android:id="@+id/down_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_title"
                android:layout_toEndOf="@+id/up_vote"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/font_small"
                android:drawablePadding="@dimen/margin_small"
                android:gravity="center"
                android:drawableStart="@drawable/ic_thumb_down_black_18dp"
                tools:text="1"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
