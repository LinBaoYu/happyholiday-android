<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_small"
            tools:text="10:00 am"
            />

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_time"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_large"
            tools:text="Breakfast"
            />

        <TextView
            android:id="@+id/up_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_title"
            android:drawablePadding="@dimen/margin_small"
            android:drawableStart="@drawable/ic_thumb_up_black_18dp"
            android:gravity="center"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_small"
            tools:text="3"
            />

        <TextView
            android:id="@+id/down_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_title"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@+id/up_vote"
            android:drawablePadding="@dimen/margin_small"
            android:drawableStart="@drawable/ic_thumb_down_black_18dp"
            android:gravity="center"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_small"
            tools:text="1"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
